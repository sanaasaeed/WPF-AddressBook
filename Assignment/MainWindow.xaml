<Window x:Class="Assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment"
        mc:Ignorable="d"
        Title="MainWindow" Icon="Images/WRITE.png"  Height="450" Width="800" Background="#FE3362" FontSize="20">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="1.5*"/>
    </Grid.ColumnDefinitions>
    <Image Source="Images/WRITE.png" Grid.Column="0"></Image>
    <StackPanel Grid.Column="1" Margin="20 100 100 0">
      <TextBlock Text="Email" Margin="0 0 0 10" Foreground="#fff"/>
      <TextBox x:Name="EmailBox" Margin="0 0 50 20" Padding="3" />
      <TextBlock Text="Password" Margin="0 0 0 10" Foreground="#fff"/>
      <PasswordBox x:Name="PasswordBox" Margin="0 0 50 20" Padding="3"/>
      <Button Content="Login" Width="100" Padding="0 5" Background="#2CE9C4" Click="Login_OnClick" />
    </StackPanel>
  </Grid>
</Window>
